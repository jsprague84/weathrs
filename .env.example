# Weathrs Configuration
# Copy this file to .env and fill in your values

# Required: OpenWeatherMap API key
# Get yours at: https://openweathermap.org/api
WEATHRS_OPENWEATHERMAP_API_KEY=your_api_key_here

# Server configuration (optional)
WEATHRS_HOST=0.0.0.0
WEATHRS_PORT=3000

# Weather defaults (optional)
WEATHRS_DEFAULT_CITY=London
WEATHRS_UNITS=metric

# Logging level (optional)
RUST_LOG=weathrs=info,tower_http=info
